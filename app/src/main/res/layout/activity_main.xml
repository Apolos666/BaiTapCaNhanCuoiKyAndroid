<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="50sp">
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="35dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FitTrack"
                android:textStyle="bold"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="71dp"/>
            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_notification"
                    android:background="@null"/>
                <ImageButton
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_user"
                    android:background="@null"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@+id/headerLayout" />
        <EditText
            android:id="@+id/searchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search activities"
            android:background="@drawable/bg_search"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            android:layout_marginTop="20dp"
            />
        <LinearLayout
            android:id="@+id/buttonBar"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/searchbar"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/toOldActivity"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Log Activity"
                android:padding="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#000000"
                app:icon="@drawable/ic_plus"
                app:iconGravity="top"
                android:drawablePadding="8dp"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                app:iconTint="#FFFFFF" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="View Stats"
                android:padding="16dp"
                android:backgroundTint="#E0E0E0"
                app:icon="@drawable/ic_stats"
                android:drawablePadding="8dp"
                android:textColor="#000000"
                app:cornerRadius="8dp"
                app:iconGravity="top"
                app:iconTint="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/buttonBar"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:tabTextColor="@android:color/darker_gray"
                app:tabSelectedTextColor="@android:color/black"
                app:tabIndicatorHeight="0dp">
            </com.google.android.material.tabs.TabLayout>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>